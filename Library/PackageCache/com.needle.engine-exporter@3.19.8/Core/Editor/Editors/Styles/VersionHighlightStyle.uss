
.root {
    height: 100%;
}

.highlight-top {
    margin-top: 45px;
    margin-bottom: 10px;
}

.highlight-top .description {
    color: #888;
    font-size: 16px;
}

.highlight-root {
    padding: 10px 20px;
    background-color: rgba(0, 0, 0, .07);
    height: 100%;
}

.highlight-root .content {
    margin-top: 30px;
    margin-bottom: 30px;
    height: 100%;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    padding-right: 10px;
    margin-right: -10px;
    /*justify-content: space-between;*/
    /*background-color: rgba(0, 0, 0, .07);*/
}

.highlight-root .nothing-here {
    -unity-text-align: middle-center;
    font-size: 20px;
    height: 50px;
    margin-top: 25%;
    justify-content: space-between;
    color: gray;
}

.highlight-header {
    border-bottom-color: rgba(255, 255, 255, .2);
    border-bottom-width: 1px;
    height: 20px;
}

.highlight-header .version {
    position: absolute;
    right: 0;
    overflow: visible;
    color: #999;
}

.highlight-element {
    padding-top: 10px;
    padding-bottom: 15px;
    margin-top: 1px;
    flex-grow: 1;
    flex-shrink: 0;
    min-height: 100%;
}

.highlight-element .title {
    font-size: 20px;
    margin-bottom: 5px;
    flex-shrink: 0;
}

.highlight-element .body {
    font-size: 16px;
    padding-right: 20px;
    color: #999;
    flex-shrink: 0;
}


.footer {
    position: absolute;
    padding: 0;
    left: 18px;
    bottom: 10px;
    max-width: 95%;
}